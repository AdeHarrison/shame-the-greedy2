extends layout

block content
    div.container
        form(method="POST" action="/users/register")
            div.form-group
                label(for="name") Name:
                input#name.form-control(type="text" name="name" value=formData.name)
            div.form-group
                label(for="email") Email:
                input#email.form-control(type="email" name="email" value=formData.email)
            div.form-group
                label(for="userName") User Name:
                input#userName.form-control(type="text" name="userName" value=formData.userName)
            div.form-group
                label(for="password") Password:
                input#password.form-control(type="password" name="password" value=formData.password )
            div.form-group
                label(for="password2") Confirm Password:
                input#password2.form-control(type="password" name="password2" value=formData.password2 )
            button.btn.btn-primary(type="submit") Sign up
